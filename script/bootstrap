#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  block compile pipenv "$@"
  mkdir -p "$shome/bin"
  (set +f; cd bin && ln -nfs "$(pipenv run which aws)" awscli )
  (set +f; cd bin && ln -nfs "$(pipenv run which aws-encryption-cli)" .)
}

main "$@"
